@model GerenciadorTarefas.Models.Tarefa

@{
    ViewData["Title"] = "Nova Tarefa";
}

<div class="main-card animate-fade-in">
    <div class="main-header">
        <h1>✨ Nova Tarefa</h1>
        <p>Crie uma nova tarefa para organizar seu dia</p>
    </div>

    <div class="form-elegant">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
            <div>
                <h2 style="margin: 0; font-family: 'Playfair Display', serif; font-weight: 600; color: var(--gray-800);">
                    Detalhes da Tarefa
                </h2>
                <p style="margin: 0.5rem 0 0; color: var(--gray-600);">
                    Preencha os campos abaixo para criar sua tarefa
                </p>
            </div>
            <a asp-action="Index" class="btn-outline-elegant">
                <span>←</span>
                Voltar
            </a>
        </div>

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="form-group">
                <label asp-for="Titulo" class="form-label">📌 Título da Tarefa</label>
                <input asp-for="Titulo" class="form-control" placeholder="Ex: Estudar para a prova de matemática..." />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Descricao" class="form-label">📝 Descrição (Opcional)</label>
                <textarea asp-for="Descricao" class="form-control" placeholder="Adicione mais detalhes sobre a tarefa..."></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            
            <div class="form-check">
                <input class="form-check-input" asp-for="Concluida" type="checkbox" />
                <label class="form-check-label" asp-for="Concluida">
                    ✅ Marcar como concluída
                </label>
            </div>
            
            <div style="display: flex; gap: 1rem; justify-content: flex-end; margin-top: 2rem;">
                <a asp-action="Index" class="btn-outline-elegant">
                    <span>❌</span>
                    Cancelar
                </a>
                <button type="submit" class="btn-elegant btn-success-elegant">
                    <span>💾</span>
                    Criar Tarefa
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
